<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jogo do Dinossauro</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }

        canvas {
            display: block;
            margin: 0 auto;
            background-color: #f7f7f7;
            border: 2px solid #333;
        }

        #score {
            text-align: center;
            font-size: 24px;
            margin-top: 20px;
        }

        #game-over {
            text-align: center;
            font-size: 30px;
            display: none;
            color: red;
        }
    </style>
</head>
<body>
    <h1 style="text-align:center;">Jogo do Dinossauro do Victor</h1>
    <canvas id="canvas" width="800" height="200"></canvas>
    <div id="score">Pontuação: 0</div>
    <div id="game-over">Fim de jogo! Aperte F5 para jogar novamente.</div>

    <script>
        const canvas = document.getElementById('canvas');
        const ctx = canvas.getContext('2d');

        // Carregar a imagem do dinossauro
        const dinoImage = new Image();
        dinoImage.src = 'https://img.myloview.com.br/fotomurais/desenho-animado-feliz-e-engracado-dinossauro-tiranossauro-ilustracao-para-criancas-700-145521887.jpg'; // Use um URL válido aqui

        let dino = {
            x: 50,
            y: 100,
            width: 70, // Ajuste a largura conforme a imagem
            height: 50, // Ajuste a altura conforme a imagem
            isJumping: false,
            jumpHeight: 100,
            jumpSpeed: 10,
            dy: 0
        };

        let obstacles = [];
        let frame = 0;
        let score = 0;
        let gameSpeed = 5;
        let gameRunning = true;

        function drawDino() {
            ctx.drawImage(dinoImage, dino.x, dino.y, dino.width, dino.height);
        }

        function createObstacle() {
            let obstacleHeight = 30 + Math.random() * 50;
            let obstacle = {
                x: canvas.width,
                y: canvas.height - obstacleHeight,
                width: 30,
                height: obstacleHeight,
                color: '#555'
            };
            obstacles.push(obstacle);
        }

        function drawObstacles() {
            ctx.fillStyle = '#555';
            obstacles.forEach(obstacle => {
                ctx.fillRect(obstacle.x, obstacle.y, obstacle.width, obstacle.height);
                obstacle.x -= gameSpeed;
            });

            obstacles = obstacles.filter(obstacle => obstacle.x + obstacle.width > 0);
        }

        function detectCollision() {
            for (let i = 0; i < obstacles.length; i++) {
                let obstacle = obstacles[i];
                if (
                    dino.x < obstacle.x + obstacle.width &&
                    dino.x + dino.width > obstacle.x &&
                    dino.y < obstacle.y + obstacle.height &&
                    dino.height + dino.y > obstacle.y
                ) {
                    gameRunning = false;
                    document.getElementById('game-over').style.display = 'block';
                }
            }
        }

        function jump() {
            if (!dino.isJumping) {
                dino.isJumping = true;
                dino.dy = -dino.jumpSpeed;
            }
        }

        function update() {
            if (dino.isJumping) {
                dino.y += dino.dy;
                dino.dy += 0.5; // Gravidade

                if (dino.y >= 130) {
                    dino.y = 130;
                    dino.isJumping = false;
                }
            }
        }

        function draw() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            drawDino();
            drawObstacles();
            detectCollision();

            if (!gameRunning) return;

            frame++;

            if (frame % 100 === 0) {
                createObstacle();
            }

            score++;
            document.getElementById('score').innerText = `Pontuação: ${score}`;

            update();

            requestAnimationFrame(draw);
        }

        window.addEventListener('keydown', function (e) {
            if (e.code === 'Space') {
                jump();
            }
        });

        // Iniciar o jogo quando a imagem estiver carregada
        dinoImage.onload = function() {
            draw();
        };

        // Se houver erro ao carregar a imagem, exibir uma mensagem
        dinoImage.onerror = function() {
            alert('Erro ao carregar a imagem do dinossauro. Verifique o URL.');
        };
    </script>
</body>
</html>

